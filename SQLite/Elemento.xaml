<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite.Elemento">
    <ContentPage.Content>
       
        <StackLayout>
            <Label x:Name="mensaje"/>
            <Label Text="Nombre"/>
            <Entry x:Name="Nombre" Placeholder="Nombre"/>
            
      
            <Label Text="Usuario"/>
            <Entry x:Name="Usuario" Placeholder="Usuario"/>
            
            <Label Text="Contraseña"/>
            <Entry x:Name="Contrasena" Placeholder="Contraseña"/>
          

            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>


        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>